@using BakeryTracker.Models;
@{
  Layout = "_Layout";
}

<h1>Vendors</h1>

@if (@Model.Count == 0)
{
  <p>You have no vendors! Add a few!</p>
}

@foreach (Vendor vendor in Model)
{
  <h4><a href="/vendors/@vendor.Id">@vendor.Name</a></h4>
}

<p>Click on a vendor to see their order details!</p>

<button class="btn"><a href="/">Home</a></button>
<button class="btn"><a href="/vendors/new">Add Vendor</a></button>