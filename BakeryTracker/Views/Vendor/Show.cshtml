@using BakeryTracker.Models;

@{
  Layout = "_Layout";
}

<h1>@Model["vendor"].Name</h1>
<p>Address: @Model["vendor"].Address</p>
<p>Description: @Model["vendor"].Description</p>

<h4>Here are all of @Model["vendor"].Name's Orders:</h4>

@if (@Model["orders"].Count == 0)
{
  <p>This customer has no outstanding orders!</p>
}

@foreach (Order order in @Model["orders"])
{
  <p><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Type</a></p>
}

<button class="btn"><a href='/vendors/@Model["vendor"].Id/orders/new'>Add Order</a></button>
<hr>
<button class="btn"><a href="/">Home</a></button>
<button class="btn"><a href="/vendors">Vendor List</a></button>