@using BakeryTracker.Models;
@{
  Layout = "_Layout";
}

<h1>Vendors</h1>

@if (@Model.Count == 0)
{
  <h4>You have no vendors! Add a few!</h4>
}

@foreach (Vendor vendor in Model)
{
  <h4><a href="/vendors/@vendor.Id">@vendor.Name</a></h4>
}

<button class="btn"><a href="/">Home</a></button>
<button class="btn"><a href="/vendors/new">Add A New Vendor</a></button>